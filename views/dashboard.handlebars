        <div class="w-100"></div>
        {{#each gamer.teams}}
        <div class="row">
          <div class="col-md">
            <p>{{this.team.name}}</p>
          </div>
          <div class="col-md ml-auto">
            <p>{{this.role}}</p>
          </div>
        </div>
        {{/each}}
      </div>
      <div class="col-md-7 ml-auto bg-dark" style="margin-right: 15px;">
        <h3 class="font-weight-bold">Team Message</h3>
        {{#each gamer.teams}}
        {{#each this.team.messages}}
        <div class="col-md">
          <p class="text-left">{{this}}</p>
        </div>
        {{/each}}
        {{/each}}
