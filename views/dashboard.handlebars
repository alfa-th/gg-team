<div class="modal fade" id="DOTA2" tabindex="-1" role="dialog" aria-labelledby="DOTA2Label" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content bg-dark" style="color: white">
      <div class="modal-header">
        <h5 class="modal-title" id="DOTA2Label">Dota 2</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: white">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form action="/dashboard/DOTA 2" method="POST">
          <div class="form-group">
            <label for="revPoint">Relevant Points</label>
            <input type="text" class="form-control" name="revPoint" id="revPoint" placeholder="e.g. 3000">
          </div>
          <div class="form-group">
            <label for="revLink">Relevant Link</label>
            <input type="text" class="form-control" name="revLink" id="revLink"
              placeholder="e.g. https://steamcommunity.com/id/falth322/">
          </div>
      </div>
      <div class="modal-footer text-center">
        <button type="submit" class="btn btn-primary" style="width: 100%">Update DOTA 2 Data</button>
      </div>
      </form>
    </div>
  </div>
</div>

