<body style="background-color: #737373">

  <div class="container-fluid">
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <ul class="navbar-nav mr-auto">
        <a class="navbar-brand" href="index.html">
          <img src="img/logowhite.png" alt="logo">
        </a>
        <h2 style="color: white">|</h2>
        <h2 style="color: white" class="ml-3">Find Team Dashboard</h2>
      </ul>

      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="!#">Notification</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="!#">LogOut</a>
        </li>
      </ul>
    </nav>
  </div>

  <div class="container">
    <div class="row-md-12">
      <div class="col-md-12 mt-3">
        <h2 style="text-align: center; color: white">FIND TEAMS</h2>
      </div>
    </div>
    <div class="row-md-12">
      <div class="col-md-12 mt-4">
        <div class="dropdown text-center">
          <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            #Filters
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
          </div>
        </div>
      </div>
    </div>
    <div class="row-md-12  mt-4 text-center">
      <div class="col-md-12">
        <button type="button" class="btn btn-dark mr-3 p-3" style="border-radius: 50px;">
          <h3>Search</h3>
        </button>
        <button type="button" class="btn btn-dark mr-3 p-3" style="border-radius: 50px;">
          <h3>Create</h3>
        </button>
      </div>
    </div>

    {{#if infos}}
    <div class="row mt-5 text-center">
      <div class="col">
        <div class="alert alert-primary" role="alert">
          {{infos}}
        </div>
      </div>
    </div>
    {{else}}
    {{#each teams}}
    <div class="row mt-5 text-center">
      <div class="col">
        <button type="button" class="btn btn-dark mr-3" onclick="window.location.href='team.php'"
          style="border-radius: 50px; padding: 10px 500px 10px 500px;">
          <h3>{{this}}</h3>
        </button>
      </div>
    </div>
    {{/each}}
    {{/if}}

  </div>
